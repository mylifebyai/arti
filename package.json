{
  "name": "claude-sdk-starter-kit",
  "description": "A starter kit for building AI-powered desktop applications with the Claude Agent SDK",
  "type": "module",
  "version": "0.1.1",
  "license": "MIT",
  "main": "out/main/index.cjs",
  "scripts": {
    "postinstall": "electron-rebuild -f -w better-sqlite3",
    "dev": "node scripts/dev.js",
    "build": "electron-vite build",
    "build:mac": "npm run build && electron-builder --mac",
    "build:win": "npm run build && electron-builder --win",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --cache --cache-location .eslintcache --max-warnings=0",
    "test": "node scripts/run-bun.js test",
    "test:ai-news-tweet": "node scripts/run-bun.js run scripts/test-ai-news-tweet.ts",
    "test:bypass-auth": "node scripts/run-bun.js run scripts/test-bypass-auth.ts",
    "test:export": "node scripts/run-bun.js run scripts/test-export.ts",
    "test:extended-context": "node scripts/run-bun.js run scripts/test-extended-context.ts",
    "format": "prettier --experimental-cli --write .",
    "format:check": "prettier --experimental-cli --check --log-level warn .",
    "clean": "node scripts/clean.js"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.61",
    "@monaco-editor/react": "^4.7.0",
    "@supabase/supabase-js": "^2.93.3",
    "better-sqlite3": "^12.4.6",
    "chokidar": "^5.0.0",
    "dotenv": "^17.2.3",
    "electron-updater": "^6.6.2",
    "get-port": "^7.1.0",
    "glob": "^13.0.0",
    "lucide-react": "^0.554.0",
    "monaco-editor": "^0.55.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-markdown": "^10.1.0",
    "react-resizable-panels": "^3.0.6",
    "remark-gfm": "^4.0.1"
  },
  "optionalDependencies": {
    "@img/sharp-darwin-arm64": "^0.33.5",
    "@img/sharp-darwin-x64": "^0.33.5",
    "@img/sharp-linux-arm": "^0.33.5",
    "@img/sharp-linux-arm64": "^0.33.5",
    "@img/sharp-linux-x64": "^0.33.5",
    "@img/sharp-win32-x64": "^0.33.5"
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.0",
    "@eslint/js": "^9.39.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.17",
    "@types/archiver": "^7.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/bun": "^1.3.2",
    "@types/glob": "^8.1.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.4",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "archiver": "^7.0.1",
    "autoprefixer": "^10.4.21",
    "electron": "^39.2.3",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "electron-vite": "^4.0.1",
    "eslint": "^9.39.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "tailwindcss": "^4.1.16",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0",
    "vite": "^7.1.12"
  },
  "build": {
    "appId": "com.pheuter.claude-sdk-starter-kit",
    "productName": "Claude SDK Starter Kit",
    "icon": "static/icon.ico",
    "beforeBuild": "scripts/beforeBuild.js",
    "afterPack": "scripts/afterPack.js",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "out/node_modules/@anthropic-ai/claude-agent-sdk/**",
      "out/node_modules/@img/**/*",
      "out/node_modules/better-sqlite3/**/*",
      "out/.claude/**/*"
    ],
    "publish": [],
    "mac": {
      "target": [
        "zip"
      ],
      "icon": "static/icon.png",
      "category": "public.app-category.developer-tools",
      "electronLanguages": [
        "en",
        "en-US"
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "notarize": true,
      "entitlements": "resources/entitlements.mac.plist",
      "entitlementsInherit": "resources/entitlements.mac.inherit.plist",
      "extendInfo": {
        "NSDesktopFolderUsageDescription": "Claude SDK Starter Kit needs access to your Desktop folder to create and manage workspace files.",
        "NSDocumentsFolderUsageDescription": "Claude SDK Starter Kit needs access to your Documents folder to read and write files.",
        "NSDownloadsFolderUsageDescription": "Claude SDK Starter Kit needs access to your Downloads folder to read and write files."
      },
      "extraResources": [
        {
          "from": "resources/bun",
          "to": "bun"
        },
        {
          "from": "resources/uv",
          "to": "uv"
        }
      ]
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "static/icon.ico",
      "extraResources": [
        {
          "from": "resources/bun.exe",
          "to": "bun.exe"
        },
        {
          "from": "resources/uv.exe",
          "to": "uv.exe"
        },
        {
          "from": "resources/jq.exe",
          "to": "jq.exe"
        },
        {
          "from": "resources/git-portable",
          "to": "git-portable"
        },
        {
          "from": "resources/msys2",
          "to": "msys2"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "deleteAppDataOnUninstall": false,
      "installerIcon": "static/icon.ico",
      "uninstallerIcon": "static/icon.ico",
      "installerHeaderIcon": "static/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "static/icon.png",
      "category": "Development",
      "extraResources": [
        {
          "from": "resources/bun",
          "to": "bun"
        },
        {
          "from": "resources/uv",
          "to": "uv"
        }
      ]
    }
  }
}
